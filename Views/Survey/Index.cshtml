@model SurveyResponse
@{
    ViewData["Title"] = "Index";
}



<h1>Survey</h1>

<form method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Age"></label>
        <input asp-for ="Age" />
        <span asp-validation-for="Age"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <div>
            <input type="radio" asp-for="Gender" value="Male" />Male
            </br>
            <input type="radio" asp-for="Gender" value="Female" />Female
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Question" class="control-label">Are voting?</label>
        <div>
            Yes<input type="checkbox" name="Question" value="Yes" />
            Not sure<input type="checkbox" name="Question" value="Not sure" />
            No<input type="checkbox" name="Question" value="No" />
           
        </div>
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>
   

    <div>
        <button type="submit">Submit</button>
    </div>
</form>

